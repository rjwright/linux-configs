#!/bin/bash

sleep 10
wmctrl -n 3
wmctrl -s 0

gnome-terminal --tab-with-profile=Main --title="Main Terminal" &
gnome-terminal --tab-with-profile=Haskell --title="Haskell Terminal" &
gnome-terminal --tab-with-profile=Blink --title="Blink Terminal" &
sleep 2

wmctrl -r "Haskell Terminal" -t 1
wmctrl -r "Blink Terminal" -t 2
sleep 2

sublime -a --project "~/code/Maxifill/web-animations-next/web-animations-next.sublime-project" &
sleep 4
sublime -a --project "~/code/JSTypeInference/JSTypeInference/Code_JSTypeInference.sublime-project" &
sleep 4
wmctrl -r :ACTIVE: -t 1
sleep 2

# All of this messing around with 2 chrome instances is because they don't open properly on Ubuntu
google-chrome --window-size=800,800 &
google-chrome --window-size=800,800 &
sleep 3
wmctrl -c "New Tab - Google Chrome"
sleep 1
wmctrl -r "New Tab - Google Chrome" -b add,maximized_horz
wmctrl -r "New Tab - Google Chrome" -b add,maximized_vert

wmctrl -a "Main Terminal"